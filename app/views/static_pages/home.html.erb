<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/new_review' %>
      </section>
    </aside>
     <div class="span8">
      <h3>Review Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>

  
<% else %>
<div class="center hero-unit">
  <h1>Welcome to +wisdom</h1>
  <h2>
    A site for deep reflection and snarky commentary on the frontier of knowledge.
  </h2>
  <%= link_to "get pluswisdom now!", signup_path,
    class: "btn btn-large btn-primary" %>
</div>

  
<% end %>
